<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aloogn.view.UpdatePasswordActivity">

    <com.aloogn.view.common.TitleLayout
        android:id="@+id/ManualBinding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.aloogn.view.common.TitleLayout>

    <LinearLayout
        style="@style/PersonalInformation_LinearLayout_out"
        android:background="@drawable/linearlayout_underline"
        android:layout_marginTop="20dp">

        <LinearLayout
            style="@style/PersonalInformation_LinearLayout_in"
            android:background="@drawable/linearlayout_underline">

            <TextView
                style="@style/PersonalInformation_textView"
                android:text="密码" />

            <EditText
                android:id="@+id/updatePassword_et_password"
                style="@style/PersonalInformation_editView"
                android:layout_marginLeft="90dp"
                android:hint="请输入原来的密码"/>

        </LinearLayout>

        <LinearLayout
            style="@style/PersonalInformation_LinearLayout_in"
            android:background="@drawable/linearlayout_underline">

            <TextView
                style="@style/PersonalInformation_textView"
                android:text="重置密码" />

            <EditText
                android:id="@+id/updatePassword_et_resetPassword"
                style="@style/PersonalInformation_editView"
                android:layout_marginLeft="50dp"
                android:hint="请输入新密码"/>

        </LinearLayout>

        <LinearLayout
            style="@style/PersonalInformation_LinearLayout_in"
            android:background="@drawable/linearlayout_underline">

            <TextView
                style="@style/PersonalInformation_textView"
                android:text="确认密码" />

            <EditText
                android:id="@+id/updatePassword_et_confirmPassword"
                style="@style/PersonalInformation_editView"
                android:layout_marginLeft="50dp"
                android:hint="请重新输入新密码"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updatePassword_btn_save"
        android:text="保存"
        style="@style/PersonalInformation_button"/>

</LinearLayout>
