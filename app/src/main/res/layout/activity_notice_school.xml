<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aloogn.view.NoticeSchoolActivity">

    <com.aloogn.view.common.TitleLayout
        android:id="@+id/ManualBinding_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </com.aloogn.view.common.TitleLayout>

    <EditText
        android:id="@+id/schoolNoticeRelease"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="请点击进行信息编辑"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@null"
        android:layout_above="@id/schoolNoticeRelease_btn"
        android:layout_below="@id/ManualBinding_title"/>

    <Button
        android:id="@+id/schoolNoticeRelease_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="发布"
        android:textSize="30sp"
        android:background="@color/bg"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
