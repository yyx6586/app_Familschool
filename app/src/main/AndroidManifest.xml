        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.aloogn.view.LoginActivity" />
        <activity android:name="com.aloogn.view.TeacherMainActivity" />
        <activity android:name="com.aloogn.view.ResetPasswordActivity" />
        <activity android:name="com.aloogn.view.FamilyMainActivity" />
        <activity android:name="com.aloogn.view.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aloogn.view.PersonalInformationFamilyActivity" />
        <activity android:name="com.aloogn.view.PersonalInformationSchoolActivity" />
        <activity android:name="com.aloogn.view.NoticeFamilyActivity" />
        <activity android:name="com.aloogn.view.HomeworkFamilyActivity" />
        <activity android:name="com.aloogn.view.AchievementFamilyActivity" />
